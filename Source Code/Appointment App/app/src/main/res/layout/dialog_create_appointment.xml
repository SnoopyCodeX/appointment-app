<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.dialog.PatientDialogFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="-8dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/text_title_schedule_appointment"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimaryVariant"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/parent_medical_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/text_hint_medical_field"/>

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner_medical_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:padding="6dp"
                            android:spinnerMode="dropdown"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parent_doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/text_hint_doctor"/>

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner_doctor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:padding="6dp"
                            android:spinnerMode="dropdown"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parent_patient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/text_hint_patient_identity"/>

                        <RadioGroup
                            android:id="@+id/radio_patient"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radio_choice_myself"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/radio_choice_myself"
                                android:fontFamily="@font/poppins_light"/>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radio_choice_other"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/radio_choice_other"
                                android:fontFamily="@font/poppins_light"/>

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parent_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/text_hint_patient_name"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_patient_full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:hint="@string/hint_full_name"
                            android:fontFamily="@font/roboto_regular"
                            app:errorEnabled="true"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:padding="10dp"
                                android:inputType="text"
                                android:singleLine="true"
                                android:imeOptions="actionNext"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parent_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/text_hint_patient_gender"/>

                        <RadioGroup
                            android:id="@+id/radio_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radio_choice_male"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/radio_choice_male"
                                android:fontFamily="@font/poppins_light"/>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radio_choice_female"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/radio_choice_female"
                                android:fontFamily="@font/poppins_light"/>

                            <androidx.appcompat.widget.AppCompatRadioButton
                                android:id="@+id/radio_choice_lgbtqp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="@string/radio_choice_lgbtqp"
                                android:fontFamily="@font/poppins_light"/>

                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parent_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/text_hint_patient_age"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_patient_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:hint="@string/hint_age"
                            android:fontFamily="@font/roboto_regular"
                            app:errorEnabled="true"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:padding="10dp"
                                android:inputType="number"
                                android:singleLine="true"
                                android:imeOptions="actionNext"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parent_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/text_hint_patient_reason"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/input_patient_reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:hint="@string/hint_patient_reason"
                            android:fontFamily="@font/roboto_regular"
                            app:errorEnabled="true"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusTopStart="8dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_light"
                                android:padding="10dp"
                                android:gravity="top|start"
                                android:inputType="textMultiLine"
                                android:singleLine="false"
                                android:imeOptions="actionNext"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parent_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/text_hint_date"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/input_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_date"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parent_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/text_hint_date"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/input_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_time"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parent_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:fontFamily="@font/poppins_light"
                            android:text="@string/text_hint_preview"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/preview_medical_field"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_time"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/preview_doctor"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_time"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/preview_patient"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_time"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/preview_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_time"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/preview_gender"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_time"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/preview_age"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_time"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/preview_reason"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_time"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/preview_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_time"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/input_underline"
                            android:padding="14dp">

                            <TextView
                                android:id="@+id/preview_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/black"
                                android:hint="@string/text_hint_time"
                                android:inputType="date"
                                tools:ignore="NestedWeights,TextViewEdits" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/calendar"
                                app:tint="#5E676C"
                                android:contentDescription="@string/desc_add" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/btn_next_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginTop="30dp"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="@color/white"
                    app:mrl_rippleAlpha="0.1"
                    app:mrl_rippleDimension="10dp"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleRoundedCorners="6dp"
                    app:mrl_rippleInAdapter="false"
                    app:mrl_rippleDuration="350"
                    app:mrl_rippleFadeDuration="75"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleBackground="@color/white"
                    app:mrl_ripplePersistent="true">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="@string/btn_text_next_confirm"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_light"
                        android:background="@drawable/btn_info_selector"/>

                </com.balysv.materialripple.MaterialRippleLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>